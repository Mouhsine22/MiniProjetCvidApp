.container
  .row
    .col-sm-9.col-md-7.col-lg-5.mx-auto
      .card.card-signin.my-5
        .card-body
          .col-sm-12.text-center
            img.logo(src='/img/logo_maroc.png' alt='Maroc')
          h5.card-title.text-center Connexion
          .errors
          form.validate-form
            .form-label-group
              input#inputEmail.form-control(type='email' placeholder='Address e-mail' autofocus='')
              label(for='inputEmail') Address e-mail
            .form-label-group
              input#inputPassword.form-control(type='password' placeholder='Mote de passe')
              label(for='inputPassword') Mote de passe
            .custom-control.custom-checkbox.mb-3
              input#customCheck1.custom-control-input(type='checkbox' name='remember-me')
              label.custom-control-label(for='customCheck1') Se souvenir de moi
            button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') SE CONNECTER
            
